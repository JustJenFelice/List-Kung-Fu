<!DOCTYPE html>
<html>
<head>
  <title>List Kung Fu</title>
	<%= stylesheet_link_tag 'http://yui.yahooapis.com/2.8.1/build/reset/reset-min.css' %>
	<%= stylesheet_link_tag 'guest/application', 'guest/scaffold' %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="wrapper">
		<div id="flash_container">
	      <%- flash.each do |name, msg| -%>
	          <%= content_tag :div, msg, :id => "flash_#{name}" %>
	      <%- end -%>
	  </div>
		<%= yield %>
	</div>
	<%= javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.3/jquery.min.js' %>
	<%= javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.2/jquery-ui.min.js' %>
	<%= javascript_include_tag 'guest/application', 'jquery-rails.js' %>
	<%= yield :additional_javascript %>
</body>
</html>