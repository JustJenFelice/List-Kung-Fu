<h1>Sign up</h1>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

	<p><%= f.label :username %><br />
	<%= f.text_field :username, :autocomplete => 'off' %></p>

  <p><%= f.label :email %><br />
  <%= f.text_field :email, :autocomplete => 'off'  %></p>

	<p><%= f.label :time_zone %><br />
	<%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.all %></p>

	<p><%= f.check_box :email_dashboard %> <%= f.label :email_dashboard, "Email Dashboard" %>
		<p class="explanation">If you enable this option, List Kung Fu will send you your daily schedule by email.</p>
	</p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></p>

  <p><%= f.submit "Sign up" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
